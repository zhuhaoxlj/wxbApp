<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sentenceImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY" />

    <TextView
        android:layout_above="@+id/enSentenceTranslation"
        android:layout_margin="20dp"
        android:id="@+id/enSentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sentence"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enSentenceTranslation"
        android:layout_above="@+id/enSentenceAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translation"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enSentenceAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:text="@string/author"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>